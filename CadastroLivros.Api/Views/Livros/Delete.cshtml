@model CadastroLivros.Api.Models.Livro

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<h1>Confirmar Exclusão</h1>

<h3>Você tem certeza que deseja excluir este livro?</h3>

<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Editora</dt>
        <dd class="col-sm-10">@Model.Editora</dd>

        <dt class="col-sm-2">Edição</dt>
        <dd class="col-sm-10">@Model.Edicao</dd>

        <dt class="col-sm-2">Ano de Publicação</dt>
        <dd class="col-sm-10">@Model.AnoPublicacao</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Codl" />
    <div class="form-group">
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
