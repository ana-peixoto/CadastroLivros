@model CadastroLivros.Api.Models.Livro

@{
    ViewData["Title"] = "Detalhes do Livro";
}

<h1>Detalhes do Livro</h1>

<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Model.Codl</dd>

        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Editora</dt>
        <dd class="col-sm-10">@Model.Editora</dd>

        <dt class="col-sm-2">Edição</dt>
        <dd class="col-sm-10">@Model.Edicao</dd>

        <dt class="col-sm-2">Ano de Publicação</dt>
        <dd class="col-sm-10">@Model.AnoPublicacao</dd>

        <dt class="col-sm-2">Autores</dt>
        <dd class="col-sm-10">
            @if (Model.Autores != null && Model.Autores.Any())
            {
                <ul>
                    @foreach (var autor in Model.Autores)
                    {
                        <li>@autor.Nome</li> <!-- Supondo que Autor tem uma propriedade Nome -->
                    }
                </ul>
            }
            else
            {
                <span>Nenhum autor cadastrado.</span>
            }
        </dd>

        <dt class="col-sm-2">Assuntos</dt>
        <dd class="col-sm-10">
            @if (Model.Assuntos != null && Model.Assuntos.Any())
            {
                <ul>
                    @foreach (var assunto in Model.Assuntos)
                    {
                        <li>@assunto.Descricao</li> 
                    }
                </ul>
            }
            else
            {
                <span>Nenhum assunto cadastrado.</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
