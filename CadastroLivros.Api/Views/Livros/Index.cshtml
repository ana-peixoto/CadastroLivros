@model IEnumerable<CadastroLivros.Api.Models.Livro>

@{
    ViewData["Title"] = "Lista de Livros";
    Layout = "_Layout"; 
}

<h2>Lista de Livros</h2>


<p>
    <a asp-action="Create">Cadastrar Livro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
        
            <td>
                <a asp-action="Edit" asp-route-id="@item.Codl">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Codl">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Codl">Excluir</a>
            </td>
        </tr>
            

}
    </tbody>
</table>
